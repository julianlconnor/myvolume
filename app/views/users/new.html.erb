<div id="user_box">
	<h1 class="form_header box">Sign Up For myvolu.me</h1>
	<div class="box">
		<%= form_for @user do |f| %>
		<% if @user.errors.any? %>
		    <div class="error_messages">
		      <h2>Form is invalid</h2>
		      <ul>
		        <% for message in @user.errors.full_messages %>
		          <li><%= message %></li>
		        <% end %>
		      </ul>
		    </div>
		  <% end %>
			<table>
				<tr>
					<td><%= f.label :alias %></td>
					<td><%= f.text_field :alias %></td>
				</tr>
				<tr>
					<td><%= f.label :email %></td>
					<td><%= f.text_field :email %></td>
				</tr>
				<tr>
					<td><%= f.label :password %></td>
					<td><%= f.password_field :password %></td>
				</tr>
				<tr>
					<td><%= f.label "Confirm" %></td>
					<td><%= f.password_field :password_confirmation %></td>
				</tr>
			</table>
			<%= submit_tag "Sign in", :class => "submit input" %>
		<% end %>
	</div>
</div>
