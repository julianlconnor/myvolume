<li>
	<div class="track_detail">
		<div class="track_image">
			<a href="<%= @song.song_thumbnail.large %>" class="lightbox"><%= image_tag @song.song_thumbnail.medium %></a>
		</div>
		<div class="track_info">
			<div>
				<% track_title = "#{@song.name} (#{@song.mix_name})"%>
				<a href="#" data-src="<%= @song.sample_url %>"><%= truncate(track_title, :length => 32) %></a>
			</div>
			<div class="track_artist"><%= "#{truncate(@song.artist, :length => 28, :seperator => ' ')}"%></div>
			<div class="tags">
				<div class="track_icons">
					<div class="play_button">
						<%= image_tag("player_play.png") %>
					</div>
					<div class="queue_button">
						<%= image_tag("add_icon.png") %>
					</div>
					<div class="download">
						<%= link_to image_tag("dl_icon.png"), "#{generateQuery(@song)}", :target => "_blank" %>
					</div>
				</div>
				<span><%= @song.genres.first.name %></span>
	  			<% if is_favorite(@song.id) %>
	    			<%= link_to "❤", "/favorite/#{@song.id}", :class => "heart active"%>
				<% else %>
					<%= link_to "❤", "/favorite/#{@song.id}", :class => "heart"%>
				<% end %>
			</div>
		</div>
	</div>
</li>

