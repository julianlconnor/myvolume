    <%= form_tag sessions_path do %>
    <fieldset>
        <div class="clearfix">
    	<div class="input">
        <%= text_field_tag :email, params[:email], :placeholder => "Email" %>
    	</div>
    	</div>
    	<div class="clearfix">
            <div class="input">
              <%= password_field_tag :password, params[:password], :placeholder => "Password" %>
    	    </div>
    	</div>
    	<div class="clearfix">
    	    <%= submit_tag "Sign in", :class => "btn generic" %>
      </div>
    	</fieldset>
    <% end %>

