  <div class="chart_list">
  <% @charts.each do |chart| %>
    <div class="chart clearfix" <%= "name=/charts/#{chart.id}/get" %> title="<%= chart.name %>">
      <%= image_tag chart.chart_thumbnail.small %>
      <div class="chart_text">
        <div class="title">
          <span class="label success">New</span>
          <%= truncate(chart.name, :length => 40) %>
        </div>
        <div class="genres">
          <ul>
          <% chart.genres.each do |genre| %>
            <li class="genre <%= cycle('even','odd') %>">
              <%= genre.name %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  </div><!-- /chart_list -->
<%= will_paginate @charts, :class => "pagination charts", :param_name => "chart_page", :previous_label => 'Previous', :next_label => 'Next' %>
  
