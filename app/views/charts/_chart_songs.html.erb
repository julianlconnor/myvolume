<% if !@songs.nil? %>
<table class="zebra-striped">
    <tr>
        <th></th>
        <th></th>
        <th class="track">Track</th>
        <th class="mix_name">Mix Name</th>
        <th class="artist">Artist</th>
        <th class="genres">Genre</th>
        <th class="favorite_count"><%= image_tag 'Game-hearts-icon.png' %>'s</th>
        <th class="download">Download</th>
    </tr>
    <% @songs.each do |song| %>
      <tr>
        <td><%= image_tag song.song_thumbnail.small %></td>
        <td class="play" name="<%= song.sample_url %>">&#9654;</td>
        <td><%= song.name %></td>
        <td><%= song.mix_name %></td>
        <td><%= song.artist  %></td>
        <td><%= song.genres.first.name  %></td>
        <td><%= song.favorite_count  %></td>
        <td><%= link_to image_tag('download.png'), generateQuery(song), :target => "_blank" %></td>
    <% end %>
</table>
<% end %>
